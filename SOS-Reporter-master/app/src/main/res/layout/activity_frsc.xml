<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:orientation="vertical"
    tools:context="com.gdg.lafia.e_rer.frsc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            style="@style/Button1"
            android:onClick="carAccident"
            android:text="Car Accident" />

        <Button
            style="@style/Button2"
            android:onClick="fallenVehicle"
            android:text="Fallen Vehicle" />

        <Button
            style="@style/Button1"
            android:onClick="traffic"
            android:text="Traffic Congestion" />

    </LinearLayout>
</ScrollView>
