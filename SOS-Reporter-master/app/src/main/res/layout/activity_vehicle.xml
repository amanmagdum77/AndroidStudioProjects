<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gdg.lafia.e_rer.Vehicle">

    <EditText
        android:id="@+id/locationid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location of Crime"
        android:inputType="textCapWords"
        android:textAllCaps="true" />


    <EditText
        android:id="@+id/vtypeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationid"
        android:hint="Vehicle Type"
        android:inputType="textCapWords"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/plateid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vtypeid"
        android:hint="Plate Number"
        android:inputType="textCapWords"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/timeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plateid"
        android:hint="Time of Theft"
        android:inputType="time"
        android:textAllCaps="true" />

    <CheckBox
        android:id="@+id/armedbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeid"
        android:layout_marginTop="16dp"
        android:text="Armed"
        android:textSize="16dp" />

    <Button
        style="@style/Button1"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#ED3237"
        android:onClick="report"
        android:text="Report"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffff" />
</RelativeLayout>
